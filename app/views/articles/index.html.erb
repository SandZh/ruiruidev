<div class="col-md-12">
  <div class="article">
    <%= link_to("New Article", new_article_path, class: "btn btn-info pull-right") %>
  </div>


<table class="table table-hover">
  <thead>
  <tr>


  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= link_to(article.title, article_path(article)) %></td>

   <% if current_user && current_user == article.user %>
    <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-info btn-default" %></td>
    <td><%= link_to 'Destroy', article_path(article), class: "btn btn-info btn-default", method: :delete,data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
  <% end %>
</table>
